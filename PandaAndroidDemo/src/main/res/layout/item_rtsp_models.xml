<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_720_1280_22"
        android:background="#eeeeee"/>

    <TextView
        android:id="@+id/tv_channel_title"
        style="@style/PandaTheme.SecondText.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/height_720_1280_22"
        android:drawableLeft="@mipmap/title_logo"
        android:drawablePadding="@dimen/width_720_1280_12"
        android:paddingLeft="@dimen/width_720_1280_16"
        android:paddingRight="@dimen/width_720_1280_16"
        android:text="VR主播"
        android:textColor="#333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/width_720_1280_16"
        android:paddingRight="@dimen/width_720_1280_16"
        android:paddingTop="@dimen/width_720_1280_16">

        <include
            android:id="@+id/view_left"
            layout="@layout/item_rtsp_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <include
            android:id="@+id/view_right"
            layout="@layout/item_rtsp_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_720_1280_16"
            android:layout_weight="1"/>

    </LinearLayout>

    <Space
        android:id="@+id/iv_space2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_720_1280_16"
        android:background="#eeeeee"/>

</LinearLayout>