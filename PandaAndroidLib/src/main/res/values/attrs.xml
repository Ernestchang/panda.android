<?xml version="1.0" encoding="utf-8"?>
<!-- 这个文件里面放置自定义属性。
    android自带很多属性，比如我们布局的时候使用的layout_width,layout_height等等，
    android自带的attrs.xml文件在sdk/platforms/android-版本号/data/res/values/attrs.xml
    属性值类型参考：http://blog.csdn.net/dalancon/article/details/20359535
    使用方法参考：
        http://blog.csdn.net/dalancon/article/details/20359675
        http://blog.csdn.net/dalancon/article/details/20359997
        http://blog.csdn.net/dalancon/article/details/20360223

     常见问题：
     1. 重复命名：http://blog.csdn.net/dangnianmingyue_gg/article/details/51336683
     -->
<resources>
    <!-- 为了防止重命名，所有自定义属性都必须增加前缀Panda_ -->
    <attr name="Panda_bgColor" format="color"/>
    <attr name="Panda_primaryColor" format="color"/>
    <attr name="Panda_strokeWidth" format="dimension"/>
    <attr name="Panda_drawStyle">
        <enum name="Panda_STROKE" value="0"></enum>
        <enum name="Panda_FILL" value="1"></enum>
    </attr>
    <attr name="Panda_max" format="integer"/>

    <declare-styleable name="Panda_CircleProgressBar">
        <attr name="Panda_bgColor" />
        <attr name="Panda_primaryColor"/>
        <attr name="Panda_strokeWidth"/>
        <attr name="Panda_drawStyle">
        </attr>
        <attr name="Panda_max"/>
    </declare-styleable>

    <!-- 为了防止重命名，所有自定义属性都必须增加控件前缀 -->
    <declare-styleable name="DragView">
        <attr name="icon_drag" format="reference"/>
        <attr name="color_circle" format="color"/>
        <attr name="dot_num" format="integer"/>
    </declare-styleable>

</resources>
