    <!-- Application theme.(默认带Activity切换动画) -->
    <style name="MainAppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="android:textColor">@android:color/white</item>-->
        <!--<item name="android:background">@android:color/transparent</item>-->

        <item name="android:windowNoTitle">true</item>
        <!-- 与@android:style/Animation想冲突，同时使用会导致对方失效 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>

    </style>

    <!-- MainActivity theme.(不带Activity切换动画，适用于入口Activity) -->
    <style name="MainActivityTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>


    <!--Base application theme.-->
    <style name="AppTheme" parent="MainAppTheme">
        <!--<item name="android:textSize">@dimen/text_size_720_1280_30</item>-->
        <!--<item name="android:background">#f7f7f7</item>-->

        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!-- layout的背景 -->
    <style name="LayoutTheme">
        <item name="android:background">#f7f7f7</item>
    </style>

    <!-- 1级文本（标题、大按钮） -->
    <style name="FirstTextTheme" parent="android:Widget">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">@dimen/text_size_720_1280_42</item>
    </style>

    <!-- 2级文本（二级标题、列表标题） -->
    <style name="SecondTextTheme" parent="android:Widget">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/text_size_720_1280_36</item>
    </style>

    <!-- 3级文本（列表说明） -->
    <style name="ThirdTextTheme" parent="android:Widget">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_size_720_1280_30</item>
    </style>

    <!-- 4级文本（辅助文字） -->
    <style name="FourTextTheme" parent="android:Widget">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_size_720_1280_24</item>
    </style>

    <!-- 导航条样式 -->
    <style name="NavTheme" parent="FirstTextTheme">
        <item name="android:background">@drawable/nav_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 按钮 -->
    <style name="ButtonTheme" parent="FirstTextTheme">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 边框 -->
    <style name="DivideTheme" parent="android:Widget">
        <item name="android:background">#d1d1d1</item>
    </style>

    <!--Dialog主题-->
    <style name="Theme.DeviceDefault.Dialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 自己想要的背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 主页按钮-->
    <style name="MainButtonTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">1dp</item>
    </style>

</resources>